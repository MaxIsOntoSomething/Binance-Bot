# API Keys
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Testnet API Keys
TESTNET_API_KEY=your_testnet_key_here
TESTNET_API_SECRET=your_testnet_secret_here

# Futures Testnet API Keys (Added)
FUTURES_TESTNET_API_KEY=your_futures_testnet_key_here
FUTURES_TESTNET_API_SECRET=your_futures_testnet_secret_here

# Trading Settings
TRADING_MODE=spot
USE_TESTNET=true
ORDER_TYPE=limit
TRADE_AMOUNT=10
USE_PERCENTAGE=false
RESERVE_BALANCE=2000

# Trading Symbols
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Timeframe Configuration
DAILY_CONFIG=true:1,2,3
WEEKLY_CONFIG=true:3,6,10
MONTHLY_CONFIG=true:5,10

# Futures Settings
LEVERAGE=5
MARGIN_TYPE=isolated
POSITION_MODE=one-way
AUTO_HEDGE=false
MAX_POSITION_SIZE=1000

# Telegram Settings
USE_TELEGRAM=false
TELEGRAM_TOKEN=your_telegram_token
TELEGRAM_CHAT_ID=your_chat_id

# Risk Management
MAX_POSITIONS=10
PER_TRADE_RISK=1.0
DAILY_LOSS_LIMIT=5.0
STOP_LOSS=5.0
TAKE_PROFIT=3.0

# Connection Settings
RETRY_ATTEMPTS=3
RETRY_DELAY=1
CONNECTION_TIMEOUT=30

# Docker specific
DOCKER=true  # Always set this to true in Docker environment
